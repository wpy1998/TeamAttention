<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/login_sys"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lianlian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/add_work_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="任务名"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="指针时钟：" />

            <AnalogClock
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="数字时钟：" />

                <DigitalClock
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="20dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/add_work_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="内容"
                android:lines="5"/>
            <Button
                android:id="@+id/btnTimePickerDialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="时间"
                />
            <Button
                android:id="@+id/btnDatePickerDialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="日期" />
            <Button
                android:id="@+id/add_work_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存"/>
            <TextView
                android:id="@+id/add_work_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="0"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>