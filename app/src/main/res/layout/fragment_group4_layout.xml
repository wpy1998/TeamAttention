<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/people_builder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="群主" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/people_builder_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/people_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="管理员" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/people_manager_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/people_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="成员" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/people_member_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/fragment_group4_add_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="添加人员"
                    android:textColor="#004cff"
                    tools:textSize="18sp" />
                <TextView
                    android:id="@+id/fragment_group4_delete_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="解除项目"
                    android:gravity="right"
                    tools:textSize="18sp"
                    android:textColor="#ff0000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/people_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="0"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>